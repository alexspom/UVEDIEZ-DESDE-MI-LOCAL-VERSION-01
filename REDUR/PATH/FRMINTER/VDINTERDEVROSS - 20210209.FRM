BEGINBLOQUEFRM=HEADER
  PADRE=INTERDEVROSS
  TABLA=DEVROSS TEXTOCAB
  SOLOQUERY

  SELECT=SELECT '[HEADER]' CABECERA FROM VDDEVOLCAB WHERE STATUS=VDST.FDVCESCANEADA;

  PREBLOQUE=FEJECUTA(FABREFICHEROSTD(":BUZONOUT","HFICHERO"),"No puedo abrir fichero cabecera")
  POSTBLOQUE=FEJECUTA("CUPDADEVOL","No puede actualizarse cabecera de devolución",
                      FCIERRAFICHERO(":HFICHERO"),"No puedo cerrar ficheros",
                      FCOMMIT,"")

  
  POSTQUERY=FESCRIBEFICHERO(":HFICHERO")
  

  CURSOR=CUPDADEVOL UPDATE VDDEVOLCAB SET STATUS=VDST.FDVCFINALIZADA
                     WHERE STATUS=VDST.FDVCESCANEADA AND CODDIV=:CODDIV;

  CAMPO=HFICHERO,AUXILIAR,VIRTUAL,OCULTO
  CAMPO=BUZONOUT,AUXILIAR,VIRTUAL,OCULTO
  CAMPO=CODDIV,AUXILIAR,VIRTUAL,OCULTO
ENDBLOQUE

